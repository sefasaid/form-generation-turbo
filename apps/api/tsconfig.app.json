{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "../../",
    "skipLibCheck": true,
    "paths": {
      "@repo/prisma": ["packages/prisma/dist"],
      "@repo/prisma/*": ["packages/prisma/dist/*"],
      "@repo/prisma-module": ["packages/prisma/dist"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "jest.config.cts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs",
    "../../packages/prisma/**/*"
  ]
}